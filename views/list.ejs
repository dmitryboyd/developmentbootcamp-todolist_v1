<%- include("header") -%>
<div class="box">
        <h1 class="title" id="heading"><%= listTitle %></h1>
    </div>

    <div class="box">
            <% for (let i = 0; i < newListItems.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newListItems[i] %></p>
                </div>
            <% } %>
                <form method="post" action="/">
                    <input type="text" name="newItem" placeholder="Write New Item" autocomplete="off">
                    <button type="submit" name="list" value=<%= listTitle %>> + </button>
                </form>
    </div>

<%- include("footer") -%>